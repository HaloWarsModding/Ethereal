<UserControl
    x:Class="UI.Pages.Mods.UserControls.PlayTimeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="116"
    mc:Ignorable="d">

    <Grid
        Width="116"
        Height="30"
        Background="#FF0C0D0E">
        <Label
            x:Name="LblTime"
            Width="86"
            Margin="26,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{Binding PlayTimeString, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Foreground="White" />
        <Image
            Width="20"
            Height="19"
            Margin="6,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Source="/Resources/Time.png" />
    </Grid>
</UserControl>
