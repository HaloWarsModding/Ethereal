<UserControl
    x:Class="UI.Pages.Mods.UserControls.LastPlayedControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="92"
    mc:Ignorable="d">

    <Grid
        Width="92"
        Height="30"
        Background="#FF0C0D0E">
        <Label
            x:Name="LblDate"
            Width="64"
            Margin="26,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{Binding LastPlayedDate, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Foreground="White" />
        <Image
            Width="18"
            Height="21"
            Margin="6,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Source="/Resources/Date.png" />
    </Grid>
</UserControl>
