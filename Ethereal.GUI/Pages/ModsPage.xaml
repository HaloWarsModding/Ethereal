<Page x:Class="Ethereal.GUI.Pages.ModsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ethereal.GUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="598" d:DesignWidth="1280"
      Title="Mods">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="1">
            <Grid Grid.Column="0" Background="#BF0C0D0E" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="182">
                <WrapPanel x:Name="ModPanel"/>
            </Grid>
            <Image Name="ImgBanner" Source="/Assets/Background.png"
               ScrollViewer.VerticalScrollBarVisibility="Disabled" Height="204"
               VerticalAlignment="Top" Stretch="UniformToFill" Margin="182,0,0,0"/>
            <Button x:Name="BtnStart" Content="Launch" 
        HorizontalAlignment="Left" 
        Margin="210,177,0,0" 
        VerticalAlignment="Top" 
        Height="50" 
        Width="148" 
        FontSize="14" 
        BorderBrush="{x:Null}" 
        Background="#FF0C0D0E" 
        Foreground="White" 
        Cursor="Hand" Click="LaunchGame">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Rectangle HorizontalAlignment="Left" Height="30" Margin="384,188,0,0" VerticalAlignment="Top" Width="92" Fill="#FF0C0D0E"/>
            <Label x:Name="LblDate" Content="Today" HorizontalAlignment="Left" Margin="410,189,0,0" VerticalAlignment="Top" Foreground="White" Width="64"/>
            <Image HorizontalAlignment="Left" Height="24" Margin="390,191,0,0" VerticalAlignment="Top" Width="18" Source="/Assets/Icons/Date.png"/>
            <Rectangle HorizontalAlignment="Left" Height="30" Margin="482,188,0,0" VerticalAlignment="Top" Width="116" Fill="#FF0C0D0E"/>
            <Label x:Name="LblTime" Content="0.0 Hours" HorizontalAlignment="Left" Margin="506,190,0,0" VerticalAlignment="Top" Foreground="White" Width="88"/>
            <Image HorizontalAlignment="Left" Height="24" Margin="486,192,0,0" VerticalAlignment="Top" Width="20" Source="/Assets/Icons/Time.png" RenderTransformOrigin="0.667,0.222"/>
            <Rectangle Height="24" Margin="0,190,14,0" VerticalAlignment="Top" Fill="#FF0C0D0E" HorizontalAlignment="Right" Width="26"/>
            <Image Height="17" Margin="0,194,20,0" VerticalAlignment="Top" Source="/Assets/Icons/Wrench.png" Cursor="Hand" HorizontalAlignment="Right" Width="14" PreviewMouseDown="ShowModSettings"/>
        </Grid>
    </Grid>
</Page>