<UserControl
    x:Class="Ethereal.GUI.Pages.Mods.UserControls.ModControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Ethereal.GUI.Pages.Mods.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="252"
    Height="42"
    d:DesignWidth="252"
    mc:Ignorable="d">
    <Grid
        Width="252"
        Cursor="Hand">
        <Image
            x:Name="ImgMod"
            Width="32"
            Height="32"
            Margin="8,5,0,5"
            HorizontalAlignment="Left"
            Source="/Assets/Icons/App.ico"
            Stretch="UniformToFill" />
        <Label
            x:Name="LblModName"
            Width="198"
            Margin="47,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Label"
            FontSize="10"
            Foreground="White" />

    </Grid>
</UserControl>
